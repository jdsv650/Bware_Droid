<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.jdsv650.bware.DetailActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:layout_margin="10dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/countryTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="Country"
                android:textSize="16sp"
                android:layout_alignParentLeft="true"/>

            <EditText
                android:id="@+id/countryEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@color/colorWhite"
                android:hint="Country"
                android:inputType="text"
                android:padding="10dp"
                android:layout_alignTop="@+id/countryTextView"
                android:layout_toEndOf="@+id/countryTextView" />

            <TextView
                android:id="@+id/cityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:text="City---"
                android:textSize="16sp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/countryTextView" />

            <EditText
                android:id="@+id/cityEditText"
                android:layout_width="226dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@color/colorWhite"
                android:hint="City"
                android:inputType="text"
                android:padding="10dp"

                android:layout_below="@+id/countryEditText"
                android:layout_alignStart="@+id/countryEditText"
                android:layout_alignEnd="@+id/countryEditText" />
        </RelativeLayout>


        <EditText
            android:id="@+id/stateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:background="@color/colorWhite"
            android:ems="10"
            android:inputType="text"
            android:hint="State" />

        <EditText
            android:id="@+id/countyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:background="@color/colorWhite"
            android:ems="10"
            android:inputType="text"
            android:hint="County"
            />

        <EditText
            android:id="@+id/descriptionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:background="@color/colorWhite"
            android:ems="10"
            android:inputType="text"
            android:hint="Description" />

        <EditText
            android:id="@+id/carriedEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:background="@color/colorWhite"
            android:ems="10"
            android:inputType="text"
            android:hint="Carried"
            />

        <EditText
            android:id="@+id/crossedEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:background="@color/colorWhite"
            android:ems="10"
            android:inputType="text"
            android:hint="Crossed" />

        <EditText
            android:id="@+id/zipEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:background="@color/colorWhite"
            android:ems="10"
            android:inputType="text"
            android:hint="Zip" />

    </LinearLayout>


</ScrollView>
